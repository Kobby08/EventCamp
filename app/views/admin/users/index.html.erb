<header>
	<h1>Users</h1>

	<ul class = "actions">
		<li><%= link_to "Back to Dashboard", admin_root_path, class: "ibtn" %></li>
	</ul>
</header>

<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<th>User Id</th>
			<th>Avatar</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Joined</th>
			<th>Events</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= link_to user.id, user_path(user), class: "btn btn-primary" %></td>
				<td><%= image_tag avatar_url(current_user), width: 25, class: "img-circle"%> </td>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td><%= time_format(user.created_at) %></td>
				<td><%= link_to user.organized_events.count, user_path(user) %></td>
			</tr>
		<% end %>
	</tbody>
</table>


