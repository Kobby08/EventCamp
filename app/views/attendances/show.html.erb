<header>
	<h1 id="show-title"><%= @event.title %></h1> <h3>Attendance Status</h3>

	<ul class="actions">
		<li><%= link_to "Back", user_path, class: "btn btn-default" %></li>
	</ul>
</header>

<!--This is for organized events -->

<%if @event.attendees.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Registered Date</th>
				<th>Ticket Purchased</th>
				<th colspan="3">Ticket Code</th>
			</tr>
		</thead>

		<tbody>
			<% @event.coupons.each do |coupon| %>
				<tr>
					<td><%= coupon.user.full_name %></td>
					<td><%= coupon.user.email %></td>
					<td><%= coupon.created_at %></td>
					<td><%= coupon.ticket.name %></td>
					<td><%= (coupon.code).upcase %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else%>
	<p>Sorry! This event has no attendees yet...</p>
<% end %>